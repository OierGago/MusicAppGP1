<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/item_frame"
        android:layout_width="408dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/item_disc_img"
            android:layout_width="84dp"
            android:layout_height="74dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/sin_t_tulo" />

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_song_title"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:fontFamily="@font/inter_medium"
                android:paddingTop="12dp"
                android:text="TextView"
                android:textAlignment="viewStart"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/item_song_autor"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/inter_medium"
                android:paddingTop="8dp"
                android:text="TextView" />
        </LinearLayout>

        <ImageView
            android:id="@+id/item_youtube"
            android:layout_width="41dp"
            android:layout_height="44dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/youtube_logo" />

        <ImageView
            android:id="@+id/item_favorito"
            android:layout_width="42dp"
            android:layout_height="40dp"
            android:layout_marginTop="18dp"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart_coraz_n_svg" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>